!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title #{ENV['MAIL_SENDER_NAME'] || 'Development Patchwork'} Email
    :css
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
        font-family: 'Source Sans Pro', sans-serif;
      }

      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        max-width: 700px;
        width: 100%;
        margin: 0 auto;
        padding: 20px;
      }

      .logo {
        width: 140px;
      }

      .otp-verification {
        width: 37.33px;
        height: 42px;
      }

      .reset-password {
        height: 42px;
      }

      .center {
        display: block;
        margin: 0 auto;
      }

      .email-title {
        vertical-align: super;
      }

      .text {
        font-style: normal;
        font-weight: 400;
        font-size: 17px;
        line-height: 21px;
        color: #364663;
      }

      #code {
        font-style: normal;
        font-weight: 700;
        font-size: 40px;
        line-height: 50px;
        letter-spacing: 0.08em;
        font-variant: small-caps;
        color: #{brand_color};
        padding-top: 16px;
      }

      .horizontal-line {
        padding: 31px 0;
      }

      .email-logo {
        padding-bottom: 31px;
      }

      .email-title {
        padding-bottom: 24px;
        font-style: normal;
        font-weight: 700;
        font-size: 22px;
        line-height: 100%;
        color: #000000;
      }

      .email-title img {
        width: 22px;
        vertical-align: text-bottom;
      }

      .stores {
        padding-top: 31px;
      }

      .apple-store {
        vertical-align: super;
        margin-right: 26px;
        width: 96.38px;
        height: 19.62px;
      }

      .google-play-store {
        vertical-align: super;
        width: 80px;
        height: 19.62px;
      }

      .insta {
        margin-right: 28px;
        width: 20px;
      }

      .youtube {
        margin-right: 28px;
        width: 21px;
      }

      .linkedin {
        width: 18px;
      }

      .socials {
        padding-bottom: 19px;
      }

      .copyright {
        padding-bottom: 17px;
        font-style: normal;
        font-weight: 400;
        font-size: 13px;
        line-height: 160%;
        color: #000000 !important;
      }

      .terms {
        font-style: normal;
        font-weight: 400;
        font-size: 11px;
        line-height: 13px;
        text-align: center;
        text-decoration-line: underline;
        color: #2c2d2f !important;
      }

      .note {
        font-style: italic;
        font-weight: 400;
        font-size: 12px;
        line-height: 15px;
        text-align: center;
        color: #364663;
        width: 454px;
        padding-top: 16px;
      }

      .down-arrow {
        margin: 0 5px;
        width: 8px;
      }

      .edit-email-section{
        .form-container {
          max-width: 500px;
          margin: 0 auto;
          border: 1px solid #ddd;

          .form-group {
          margin-bottom: 15px;
          }

          .form-label {
            margin-bottom: 5px;
            font-weight: 600;
            font-size: 14px;
            color: #333;
          }

          .form-control {
            border-radius: 5px;
            border: 1px solid #ccc;
            padding: 10px;
            font-size: 14px;
          }

          .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            border-radius: 5px;
            font-size: 14px;
          }

          .btn-primary:hover {
            background-color: #0056b3;
          }

          .alert {
            font-size: 14px;
          }
        }


      }

  %body
    .container
      %table{border: "0", cellpadding: "0", cellspacing: "0", width: "100%"}
        %tr
          %td{align: "center", valign: "middle"}
            %img.email-logo{alt: "#{ENV['LOCAL_DOMAIN']} Logo", src: mail_header_logo_image_url.presence || ENV['MAIL_LOGO_URL'].presence || 'https://patchwork-demo-assets.s3.eu-west-2.amazonaws.com/Patchwork-Logo-Email.png'}
        %tr
          %td.horizontal-line{colspan: "100%"}
            %hr/

        = yield

        %tr
          %td.stores{align: "center", valign: "middle"}
            - if ENV['IOS_APP_STORE_URL'].present? && ENV['IOS_APP_STORE_URL'].blank? == false
              = link_to "#{ ENV['IOS_APP_STORE_URL'] }", style: 'text-decoration: none' do
                %img.apple-store{src: "https://newsmast-assets.s3.eu-west-2.amazonaws.com/app-store.png", alt: 'App Sote'}
            - if ENV['ANDROID_APP_STORE_URL'].present? && ENV['ANDROID_APP_STORE_URL'].blank? == false
              = link_to "#{ ENV['ANDROID_APP_STORE_URL'] }", style: 'text-decoration: none' do
                %img.google-play-store{src: "https://newsmast-assets.s3.eu-west-2.amazonaws.com/google-play-store.png", alt: 'Google Play Store'}
        %tr
          %td.horizontal-line{colspan: "100%"}
            %hr/
        -# %tr
        -#   %td.socials{align: "center", valign: "middle"}
        -#     %img.insta{src: "https://newsmast-assets.s3.eu-west-2.amazonaws.com/instagram.png", alt: "Newmast Instagram"}
        -#     %img.youtube{src: "https://newsmast-assets.s3.eu-west-2.amazonaws.com/youtube.png", alt: "Newmast Youtube"}
        -#     %img.linkedin{src: "https://newsmast-assets.s3.eu-west-2.amazonaws.com/linkedin.png", alt: "Newmast Linkedin"}
        %tr
          %td.copyright{align: "center", valign: "middle"}
            Â© #{ENV['MAIL_SENDER_NAME']} #{Time.zone.now.year}. All rights reserved.
            - if ENV['LOCAL_DOMAIN'] == 'mo-me.social'
              %a{href: "https://mediarevolution.org/", style: "color: #000000 !important; text-decoration: none"} Media Revolution
        - if ENV['PRIVACY_POLICY_URL'].present? && ENV['TERMS_AND_CONDITIONS_URL'].present? && ENV['PRIVACY_POLICY_URL'].blank? == false && ENV['TERMS_AND_CONDITIONS_URL'].blank? == false
          %tr
            %td.terms{align: "center", valign: "middle"}
              %a{href: "#{ ENV['PRIVACY_POLICY_URL'] }", style: "color: #2c2d2f !important"} Privacy policy
              %img.down-arrow{src: "https://newsmast-assets.s3.eu-west-2.amazonaws.com/down-arrow.png", alt: "Down Arrow"}
              %a{href: "#{ ENV['TERMS_AND_CONDITIONS_URL'] }", style: "color: #2c2d2f !important"} Terms of service
              %img.down-arrow{src: "https://newsmast-assets.s3.eu-west-2.amazonaws.com/down-arrow.png", alt: "Down Arrow"}
